// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.build": true,
        "**/*.hex": true,
        "**/*.bin": true
    },
    "files.associations": {
      "*.h": "c",
      "*.c": "c",
      "*.cpp": "cpp",
      "*.hpp": "cpp",
      "xstddef": "c",
      "type_traits": "c",
      "utility": "c",
      "array": "c",
      "hash_map": "c",
      "hash_set": "c",
      "*.tcc": "c",
      "forward_list": "c",
      "string": "c",
      "unordered_map": "c",
      "unordered_set": "c",
      "memory": "c",
      "optional": "c",
      "string_view": "c",
      "fstream": "c",
      "future": "c",
      "istream": "c",
      "ostream": "c",
      "vector": "c",
      "sstream": "c",
      "streambuf": "c",
      "thread": "c",
      "functional": "c",
      "tuple": "c",
      "valarray": "c",
      "variant": "c",
      "condition_variable": "c"
    }
}
